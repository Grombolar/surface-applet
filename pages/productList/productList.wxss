/* pages/playBookList/playBookList.wxss */
@import '../tabbar/tabbar.wxss';

/*产品列表*/

.rpy_list {
  width: 100vw;
  height: 80.222vh;
  /* flex: 1; */
  background-color: white;
  overflow-y: scroll;
  box-sizing: border-box;
  padding: 20rpx 40rpx;
}

/**产品item**/

.product_item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 0rpx;
  /* padding-left:24rpx;
  padding-right: 30rpx; */
  border-bottom: 2rpx solid #f1f1f1;
}

/*mini刊封面容器*/

.product_img_box {
  width: 180rpx;
  height: 180rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/*mini刊封面image*/

.product_img {
  width: 180rpx;
  height: 180rpx;
  /* background-color: #30b5f2; */
}

/*mini刊信息容器*/

.product_info_box {
  display: flex;
  flex-direction: column;
  height: 160rpx;
  padding: 10rpx 0;
  width: 440rpx;
  justify-content: space-between;
  position: relative;
}

.product_info_container {
  display: flex;
  flex-direction: column;
  height: 90rpx;
  justify-content: space-around;
}

/*mini刊标题*/

.product_title {
  font-size: 30rpx;
  color: #333;

  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1;
  overflow: hidden;
}

/*mini刊状态*/

.product_summary {
  width: 440rpx;
  height: auto;
  font-size: 26rpx;
  color: #aaa;
  /* border-radius: 10rpx;
  border:2rpx solid #30b5f2; */
  line-height: 32rpx;
  padding: 2rpx 5rpx;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

/*mini刊日期*/

.product_date
{
  font-size: 20rpx;
  color:#999;
  display: flex;
  align-items: center;
}

/*时钟icon容器*/

.clock_box
{
  width:22rpx;
  height: 22rpx;
  margin-right: 10rpx;
  display: flex;
  justify-content: center;
  align-content: center;

}

/*时钟icon*/

.clock_box_img
{
  width:22rpx;
  height: 22rpx;
}
