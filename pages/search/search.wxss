/* pages/search/search.wxss */
.search_section{
  width: 100%;
  height: 100%;
  display: block;
}
.search_section_content{
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: row;
   justify-content: space-between; 
   align-items: center; 
}
.search_box{
  width: 400rpx;
  height: 44rpx;
  padding: 0 10rpx;
  border: solid 2rpx #aaa;
  border-radius: 4rpx;
  font-size: 30rpx;
  color: #333;
  line-height: 44rpx;
  margin-left: 24rpx;
}
.btn_search_box{
  width: 78rpx;
  height: 78rpx;
  border: 0;
  background-color: transparent;
  border-radius: 0;
  margin: 0;
  padding: 0;
  margin-right: 8rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.btn_search_box::after{
  border: none;
}
.btn_search{
  display: block;
  width: 48rpx;
  height: 48rpx;
}