/* pages/playBook/playBook.wxss */

page {
  background-color: #f7fafd;
  padding-bottom: 30rpx;
  position: relative;
}

.article_box {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
}

.article_title {
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
  font-weight: bold;
  width: 80vw;
  margin: 0 auto;
  text-align: center;
}

.article_type_box {
  margin-top: 24rpx;
  margin-bottom: 24rpx;
  display: inline-flex;
  align-items: baseline;
}

.article_type_box text:nth-child(1) {
  display: inline-block;
  border: 2rpx solid #30b5f2;
  color: #30b5f2;
  font-size: 26rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
  margin-right: 14rpx;
}

.article_type_box text:nth-child(2) {
  color: #666;
  font-size: 26rpx;
}

.article_secrit {
  color: #666;
  font-size: 26rpx;
}

/**富文本**/

.articl_detail_scroll {
  width: 690rpx;
  overflow: auto;
  /*height: 650rpx;*/
}

.rich_text {
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
}

/*保密**/

.secrecy {
  position: absolute;
  opacity: 0.8;
  left: -50rpx;
  width: 300rpx;
  height: 50rpx;
  background-color: rgba(204, 204, 204, 0.2);
  text-align: center;
  line-height: 50rpx;
  color: rgba(102, 102, 102, 0.5);
  font-size: 20rpx;
  transform: rotate(-35deg);
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  box-sizing: border-box;
  padding: 0 40rpx;
  /*left:-40rpx;*/
}

/*下载标题**/

.article_download {
  color: #30b5f2;
  font-size: 30rpx;
  height: 45rpx;
  line-height: 45rpx;
  box-sizing: border-box;
  border-left: 4rpx solid #30b5f2;
  margin-top: 40rpx;
  margin-bottom: 20rpx;
  padding-left: 12rpx;
  font-weight: bold;
}

/*下载资料**/

.download_box {
  width: 100%;
  background-color: white;
  box-sizing: border-box;
  padding: 0 20rpx;
}

.download_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  color: #666;
  font-size: 26rpx;
  box-sizing: border-box;
  padding: 20rpx 0;
}

.icon_items {
  display: flex;
  align-items: center;
}

.icon_box {
  display: flex;
  align-items: center;
  justify-content: center;
  height: 64rpx;
  width: 56rpx;
}

.icon_box>image {
  width: 30rpx;
  height: 26rpx;
}

.video_box {
  width: 600rpx;
  overflow: hidden;
  margin: 0 auto;
}

/* 侧边导航 */

.aside_box {
  width: 80vw;
  height: 100vh;
  background-color: #f0f4ff;
  position: fixed;
  left: 0;
  top: 0;
  margin-left: -80vw;
  z-index: 9999;

  display: flex;
  flex-direction: row;
}

.aid_dark{
  height: 100vh;
  background-color:#000000;
  flex: 1;
}

.aid_header {
  width: 100%;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  border-bottom: solid #dedede;
}

.aid_header_title {
  width: 100%;
  height: 100rpx;
  font-size: 32rpx;
  text-align: center;
  color: #333;
  line-height: 100rpx;
}

.aid_bar_box {
  height: 100vh;
  width: 80vw;
  /* background-color: #f7fafd; */
  overflow-y: scroll;
}

.aid_bar {
  width: 100%;
  text-align: center;
  height: 76rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 76rpx;
  border-bottom: 2rpx solid #fff;
  border-right: 2rpx solid #f1f1f1;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  position: relative;
  padding: 0 10rpx;
}

/*选中时按钮*/

.selected_bar {
  /*background-color: #fafafa;*/
  color: #30b5f2;
  font-weight: bold;
}

.selected_bar::after {
  content: '';
  display: block;
  width: 8rpx;
  height: 76rpx;
  background-color: #30b5f2;
  position: absolute;
  left: 0;
  top: 0;
}

/* 二级菜单 */

.secMenuBox {
  width: 90%;
  padding-left: 10%;
  height: 0;
  /* background-color: #F8FBFE; */
  overflow: hidden;
}

.showSecMenuBox {
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.secMenu_event {
  width: 100%;
  text-align: center;
  height: 60rpx;
  font-size: 24rpx;
  color: #8c8c8c;
  line-height: 60rpx;
  /*background-color: #fafafa;*/
  border-bottom: 2rpx solid #fff;
  border-left: 2rpx solid #fff;
  box-sizing: border-box;
  -webkit-overflow-scrolling: touch;
  position: relative;
  /* padding:0 10%; */
}

.show_secMenu_event {
  background-color: #baecfe;
  color: #fff;
  border-bottom: 2rpx solid #fff;
  border-left: 2rpx solid #fff;
}

.shrink_btn {
  width: 40rpx;
  height: 61rpx;
  position: absolute;
  right: -41rpx;
  top: 50rpx;
  /* border-top: solid #30b5f2 4rpx; *//* border-right: solid #30b5f2 4rpx; *//* border-bottom: solid #30b5f2 4rpx; */
  border-radius: 4rpx;
  display: flex;
}

.shrink_icon {
  width: 100%;
  height: 100%;
}
