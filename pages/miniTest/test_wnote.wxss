/* test_wnote.wxss */

.question_container
{
  display: flex;
  flex-direction: column;
  padding:25rpx 0;
  background-color: white;
  width: 690rpx;
  margin: 0 auto;
  margin-bottom: 20rpx;
}
.question_info
{
  display: flex;
  width: 432rpx;
  margin: 0 auto;

  padding-left:24rpx;
  padding-right: 48rpx;
}
.remind_box
{
  display: flex;
  align-items: flex-start;
 
}
.remind_img
{
  width:24rpx;
  height: 24rpx;
  position: relative;
  top:4rpx;
}
.q_rules
{
  color:#333333;
  font-size: 26rpx;
  line-height: 40rpx;
  padding-left:16rpx;
}
/*问题样式*/
.questions_items
{
  width: 483rpx;
  margin: 0 auto;
  padding: 20rpx 0;
}
.question
{
  font-size: 26rpx;
  color:#333333;
}
.choice_item
{
  display: inline-flex;
  align-items: center;
  margin-top:30rpx;
}
.select_item_icon
{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-right: 22rpx;
}
.answer
{
  color: #666;
  font-size: 20rpx;
  display: flex;
  flex-wrap: nowrap;
  width:100%;
  justify-content: space-between;
}
.select_item_icon_image
{
  width: 34rpx;
  height: 34rpx;
}
.radio-group
{
  display: flex;
  flex-direction: column;
    margin-bottom:30rpx;
}
.right_answer
{
  color:#f25022;
  display: inline-flex;
  align-items: center;
  justify-content: flex-start;
}
.user_selected
{
  font-style: italic;
  border-bottom:2rpx solid #B9BBBD;
}
/*答题结果样式*/
.answer_box
{
  width: 483rpx;
  margin: 0 auto;
  margin-bottom: 30rpx;
  height: 322rpx;
  display: table;
  background-position: center center;
  background-size: 100% 100%;
  background-repeat:no-repeat;
}
.answer_right_bg
{
  position: absolute;
  left:0;
  top:0;
  width: 100%;
  height: 322rpx;
}
.result
{
  color:#666666;
  font-size: 20rpx;
  line-height:20rpx;
  text-align: center;
  margin-top: 25rpx;
}
.test_title
{
  font-size: 26rpx;
  color:#00ccff;
  margin-left:30rpx;
  margin-bottom: 20rpx;
  padding-left:16rpx;
  position:relative;
}
.test_title::before
{
  content:'';
  display: block;
  height: 28rpx;
  position: absolute;
  left: 0rpx;
  top:10rpx;
  width:4rpx;
  background-color:#00ccff;
}

/* 按钮缩小 */
.shrink{
  transform: scale(0.7)
}

.wnote_header{
  width: 100%;
  height: 230rpx;
  background-color:#f7fafd;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.wnote_header_num{
  font-size:30rpx;
color:#333333;
}

.wnote_header_text{
  font-size: 24rpx;
  color: #666;
  padding: 15rpx 0;
}