.activity_content {
  width: 100%;
  padding: 0 30rpx;
  box-sizing: border-box;
  padding-top: 20rpx;
  background-color: #f7fafd;
}

.acativity_header_title {
  width: 100%;
  height: 50rpx;
  font-size: 36rpx;
  color: #333;
  line-height: 50rpx;
  font-weight: bold;
}

.activity_header_info {
  margin: 24rpx 0;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  color: #666;
  font-size: 26rpx;
}

.activity_header_icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

/**富文本**/

.activity_detail_scroll {
  width: 690rpx;
  overflow: auto;
  /*height: 650rpx;*/
}

.rich_text {
  width: 690rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.marginBottom{
  margin-bottom: 140rpx;
}
/* 报名、签到 */

.activity_sing {
  width: 690rpx;
  height: 80rpx;
  padding: 30rpx;
  background-color: #f7fafd;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: fixed;
  left: 0;
  bottom: 0;
}

.activity_sing_btn {
  width: 300rpx;
  height: 80rpx;
  box-sizing: border-box;
  background: #32b5f2;
  /* border-radius: 0; */
  font-size: 36rpx;
  color: #fff;
  line-height: 80rpx;
  margin: 0;
  padding: 0;
}

.activity_sing_btn ::after {
  border-color: #ccc;
}

.cant_select {
  background-color: #ccc;
}

/* 调查问卷模块 */

.activity_exam_nav {
  width: 690rpx;
  height: 160rpx;
  padding: 30rpx;
  box-sizing: border-box;
  margin-top: 20rpx;
  margin-bottom: 160rpx;
  border: 2rpx solid #19adf1;
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}

.activity_exam_status_box {
  width: 600rpx;
  height: 100rpx;
  display: flex;
  flex-direction: column;
}

.activity_exam_title {
  width: 100%;
  height: 50rpx;
  font-size: 30rpx;
  color: #131313;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.activity_exam_status {
  width: 100rpx;
  height: 35rpx;
  margin-top: 15rpx;
  background-color: #cecece;
  font-size: 22rpx;
  color: #fff;
  line-height: 35rpx;
  text-align: center;
}

.activity_exam_status_do {
  width: 100rpx;
  height: 35rpx;
  margin-top: 15rpx;
  background-color: #32b5f2;
  font-size: 22rpx;
  color: #fff;
  line-height: 35rpx;
  text-align: center;
}

.activity_exam_icon {
  width: 30rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #131313;
  line-height: 100rpx;
  text-align: center;
}
