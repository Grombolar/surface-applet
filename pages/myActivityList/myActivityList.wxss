/* pages/myActivityList/myActivityList.wxss */
.activity_list{
  width: 750rpx;
  height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
}
.activity_list_unit{
  width: 690rpx;
  height: 160rpx;
  padding: 20rpx;
  border: solid 2rpx #19adf1;
  box-sizing: border-box;
  margin: 15rpx 0;
  
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
}
.activity_unit_info{
  width: 650rpx;
  height: 100%;
  display: flex;
  flex-direction: column;
justify-content:center;

}
.activity_unit_title_info{
  width: 100%;
  height: 50rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}
.activity_unit_title{
  width: auto;
  height: 50rpx;
  max-width: 450rpx;
  font-size: 30rpx;
  color: #131313;
  line-height: 50rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.activity_unit_title_status{
  width: 100rpx;
  height: 35rpx;
  border-radius: 17rpx;
  background-color: #cecece;
  font-size: 22rpx;
  color: #fff;
  line-height: 35rpx;
  text-align: center;
  margin-left: 10rpx;
  /* margin-top: 1rpx; */
  transform: scale(0.8)
}
.activity_unit_title_status_in{
  background-color: #32b5f2
}
.activity_unit_date{
  height: 50rpx;
  line-height: 50rpx;
  color: #666;
  font-size: 24rpx;
}
.activity_exam_icon {
  width: 30rpx;
  height: 100rpx;
  font-size: 30rpx;
  color: #131313;
  line-height: 100rpx;
  text-align: center;
}
